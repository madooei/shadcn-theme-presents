{
  "name": "@madooei/shadcn-theme-presets",
  "version": "0.1.0",
  "description": "A React TypeScript package for CRUD UI components, built with Tailwind CSS and shadcn/ui.",
  "keywords": [
    "react",
    "typescript",
    "library",
    "crud",
    "components"
  ],
  "homepage": "https://madooei.github.io/shadcn-theme-presets/",
  "bugs": {
    "url": "https://github.com/madooei/shadcn-theme-presets/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/madooei/shadcn-theme-presets.git"
  },
  "license": "MIT",
  "author": "Ali Madooei",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "prebuild": "npm run validate",
    "build": "tsup",
    "clean": "rm -rf dist coverage",
    "clean:all": "rm -rf dist coverage node_modules",
    "clean:nuke": "rm -rf dist coverage node_modules package-lock.json",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint ",
    "lint:fix": "eslint --fix",
    "prepublishOnly": "npm run build",
    "release": "release-it",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit --project tsconfig.build.json",
    "validate": "npm run type-check && npm run lint:fix && npm run format:fix && npm run test"
  },
  "dependencies": {
    "@nanostores/logger": "^1.0.0",
    "@nanostores/persistent": "^1.0.0",
    "@nanostores/react": "^1.0.0",
    "nanostores": "^1.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@madooei/shadcn-all-in-one": "^0.2.1",
    "@release-it/keep-a-changelog": "^7.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^16.2.0",
    "jsdom": "^26.0.0",
    "lucide-react": "^0.522.0",
    "prettier": "^3.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "release-it": "^19.0.3",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.31.1",
    "vitest": "^3.1.2"
  },
  "peerDependencies": {
    "@madooei/shadcn-all-in-one": ">=0.2.1",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0",
    "tailwindcss": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "@madooei/shadcn-all-in-one": {
      "optional": false
    },
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "tailwindcss": {
      "optional": false
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
